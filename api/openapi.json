{
  "openapi": "3.0.0",
  "info": {
    "description": "This is yet another Homematic API addon, which tries to provide as much as Web-UI functionalities.",
    "version": "0.0.1",
    "title": "Homematic OpenAPI",
    "termsOfService": "https://apps.denis-loh.com",
    "contact": {
      "email": "support@denis-loh.com"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "tags": [
    {
      "name": "devices",
      "description": "Everything about your Homematic Devices"
    },
    {
      "name": "favorites",
      "description": "Manage your favorite channels"
    },
    {
      "name": "rooms",
      "description": "Manage your room devices"
    },
    {
      "name": "CCU",
      "description": "Manage CCU settings"
    },
    {
      "name": "user",
      "description": "Operations about user"
    },
    {
      "name": "general",
      "description": "General operations"
    }
  ],
  "paths": {
    "/devices": {
      "summary": "Lists all devices",
      "get": {
        "summary": "Lists all devices",
        "description": "Lists all registered devices of your CCU.",
        "operationId": "",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "devices": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/device"
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "$ref": "#/components/responses/500internal"
          }
        },
        "tags": [
          "devices"
        ]
      }
    },
    "/devices/teach": {
      "post": {
        "summary": "Start teaching process",
        "description": "This operation starts the teaching process to find and learn new devices",
        "operationId": "",
        "responses": {
          "default": {
            "description": "Default error sample response"
          }
        },
        "tags": [
          "devices"
        ]
      }
    },
    "/version": {
      "get": {
        "summary": "Gets the version of the API",
        "description": "Gets the current version of this addon and its corresponding API",
        "operationId": "",
        "responses": {
          "default": {
            "description": "Default error sample response"
          }
        },
        "tags": [
          "general"
        ]
      }
    }
  },
  "components": {
    "responses": {
      "500internal": {
        "description": "Internal Server Error"
      }
    },
    "schemas": {
      "device": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "address": {
            "type": "string"
          },
          "interface": {
            "type": "string"
          }
        }
      }
    }
  }
}